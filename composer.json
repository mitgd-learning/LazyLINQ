{
    "name": "sanmai/lazy-linq",
    "description": ".NET LINQ-like library with mandatory lazy evaluation",
    "type": "library",
    "authors": [
        {
            "name": "Alexey Kopytko",
            "email": "alexey@kopytko.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": ">=6",
        "php-coveralls/php-coveralls": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.11",
        "codacy/coverage": "^1.4",
        "phan/phan": "^0.12.1",
        "infection/infection": "^0.8.1",
        "phpstan/phpstan": "^0.9.2",
        "mockery/mockery": "^1.0"
    },
    "license": "Apache-2.0",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {"LazyLINQ\\": "src/LazyLINQ/"}
    },
    "autoload-dev": {
        "psr-4": {"LazyLINQ\\": "tests/LazyLINQ/"}
    },
    "require": {
        "php": "^7.0",
        "sanmai/pipeline": "^1.4"
    },
    "scripts": {
        "test": "php vendor/bin/phpunit --no-coverage",
        "analyze": "PHAN_DISABLE_XDEBUG_WARN=1 php vendor/bin/phan --color --progress-bar && echo",
        "fix": "php vendor/bin/php-cs-fixer fix"
    }
}
